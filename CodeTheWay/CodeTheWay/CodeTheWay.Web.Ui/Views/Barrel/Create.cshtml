
@model CodeTheWay.Web.Ui.Models.ViewModels.BarrelViewModel
@*
    ViewData["Title"] = "Create";
*@
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Untitled</title>
    <script src=".\showhide.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/css/style.css" />
</head>
<div class="PadForAdam">
    <h1>Create</h1>
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Weight" class="control-label"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Radius" class="control-label"></label>
            <input asp-for="Radius" class="form-control" />
            <span asp-validation-for="Radius" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Height" class="control-label"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Contents" class="control-label"></label>
            <input asp-for="Contents" class="form-control" />
            <span asp-validation-for="Contents" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Owner" class="control-label"></label>
            <input asp-for="Owner" class="form-control" />
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>
        <div class="form-group, shipping">
                <label asp-for="Sender" class="control-label"></label>
                <input asp-for="Sender" class="form-control" />
                <span asp-validation-for="Sender" class="text-danger"></span>          
        </div>
        <div class="form-group, shipping">
            <label asp-for="Receiver" class="control-label"></label>
            <input asp-for="Receiver" class="form-control" />
            <span asp-validation-for="Receiver" class="text-danger"></span>
        </div>
        <div class="form-group, shipping"
            <label asp-for="SpecialInstruction" class="control-label">Special Instruction</label>
            <input asp-for="SpecialInstruction" class="form-control" />
            <span asp-validation-for="SpecialInstruction" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="isShipping" class="control-label">Is it Shipping?</label>
            <input asp-for="isShipping" class="form-control" oninput="showHideClass('shipping')"/>
            <span asp-validation-for="isShipping" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GetLongitude" class="control-label">Longitude</label>
            <input asp-for="GetLongitude" class="form-control" />
            <span asp-validation-for="GetLongitude" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GetLatitude" class="control-label">Latitude</label>
            <input asp-for="GetLatitude" class="form-control" />
            <span asp-validation-for="GetLatitude" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <div align="center">
        <button class="btn btn-back"><a asp-action="Index">Back to List</a></button>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


